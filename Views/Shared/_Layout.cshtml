<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WhatsYourAddy</title>

     <!-- Favicon -->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    
    <!-- Fonts -->
    <!-- Gideon Roman & IM Fell Great Primer SC -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gideon+Roman&family=IM+Fell+Great+Primer+SC&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <!-- Styling CSS -->
    <link rel="stylesheet" href="/css/main-Site-Style.css" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/img/ms-icon-310x310.png" alt="A T D Icon" /> EZLoan</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="index">The App</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://github.com/AngelusTaylorDev/Project-EZLoanMVC">Git Repo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Body -->
    <main id="content" class="flex-shrink-0">
        @RenderBody()
    </main>

    <!-- Footer Section -->
    <footer class="footer mt-auto py-2">
        <div class="container-fluid">
            <div class="row row-cols-1 row-cols-lg-3 gy-2">
                <div class="col order-last order-lg-first d-flex align-items-center">
                    <div><span class="text-muted">&copy; 2021</span> Angelus Taylor | angelt@angeltdev.com</div>
                </div>
                <div class="col d-flex align-items-center justify-content-start justify-content-lg-center">
                    <img src="~/img/footer-brand-img.svg" alt="Angelus T Dev Logo">
                </div>
                <div class="col d-flex align-items-center justify-content-start justify-content-lg-end">
                    <div class="row px-3">
                        <div class="col social">
                            <a href="https://www.linkedin.com/in/andytaylor3000/" target="_blank"><i class="fab fa-linkedin fa-2x"></i></a>
                        </div>
                        <div class="col social">
                            <a href="https://github.com/AngelusTaylorDev" target="_blank"><i class="fab fa-github fa-2x"></i></a>
                        </div>
                        <div class="col social">
                            <a href="https://twitter.com/AngelusTaylor" target="_blank"><i class="fab fa-twitter fa-2x"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- jquery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous">
    </script>

    <!-- font Awesome -->
    <script src="https://kit.fontawesome.com/f697b4ae1b.js" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
